<!--components/h-swiper/h-swiper.wxml-->
<swiper class="swiper"
       indicator-dots='true' 
        indicator-active-color='#FE6905'
        autoplay='true'
        circular='true'
        interval='3000'  >
  <block wx:for="{{images}}" wx:key="index">
    <swiper-item >
      <image src="{{item.picUrl}}" mode="widthFix" />
    </swiper-item>
  </block>
</swiper>

